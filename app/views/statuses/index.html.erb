<p id="notice"><%= notice %></p>

<h1>Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Styling</th>
      <th>Link Styling</th>
      <th>Order</th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.name %></td>
        <td><%= status.style %></td>
        <td><%= status.link_style %></td>
        <td><%= status.display_order %></td>
        <td class="action_button"><%= link_to 'Show', status, :class => "btn btn-primary btn-small" %></td>
        <td class="action_button"><%= link_to 'Edit', edit_status_path(status),:class => "btn btn-primary btn-small"  %></td>
        <td class="action_button"><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary btn-small"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_status_path,  :class => "btn btn-primary btn-small"  %>
